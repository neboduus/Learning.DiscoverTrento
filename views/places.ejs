<!DOCTYPE html>
<html>
    <head>
        <!-- metadata -->  
        <%include ../views/head.ejs%>
    </head>

    <body>
        <% include ../views/header.ejs %>
        <br>
        <div class="container">
            <br>
            <!-- cycle for putting 3 elements on every row -->
            <% var x=0;
               libraries.forEach(function (l){ 
                    if (x%3==0){ 
            %>
                        <div class="row">
                    <% } 
                        x++;
                    %>  
                            <div class="col-sm-6 col-md-4">
                                <div class="thumbnail img-responsive" style="width:310px; height:350px;">
                                    <div class="thumb-container">
                                        <img class="img-rounded img-thumbnail img-lib" width="300px" height="200px" src="/img/<%=l.photo%>" alt="<%=l.id%>biblio">
                                    </div>

                                    <div class="caption">
                                        <h3><%=l.name%></h3>

                                        <form method="POST" action="<%=host%>/place">
                                            <input type="hidden" name="placeId" value="<%=l.id%>">
                                            <p>
                                                <button class="btn btn-primary btn-bottom" type="submit">Details</button>
                                            </p>    
                                        </form>                
                                    </div>
                                </div>
                            </div>
            <% }) %>
                        </div>
        </div>
        
        <br><br><br>
        <% include ../views/footer.ejs %>
        
        <!-- Scripts -->
        <%include ../views/tail.ejs %>
    </body>

</html>